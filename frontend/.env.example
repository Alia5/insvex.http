#COMMON
INSVEX_HOST=localhost
INSVEX_PORT=3000
INSVEX_HOST_DIR_MAP='{ "*": "." }' # json object of host dir map '{"public.myhost.tld": "/home/user/"}'
INSVEX_ALLOWED_DIRS=* # or json array of allowed dirs to be listed '["~", "/tmp"]''
INSVEX_THUMB_DIR=thumbs
INSVEX_THUMB_SIZE=256
#if true while building, will generate frontend as SPA
# ATTENTION: This requires the frontend-files to be copied into the webroot
# additionally the backend-api needs to be publicly accessable
INSVEX_BUILDCONFIG_SPA=false
# json array of filenames that are not shown
INSVEX_BUILDCONFIG_SPA_EXCLUDED_FILES=
# name to the nginx directory index file
# ATTENTION: This requires the frontend-files to be copied into the webroot
# This is only compatible with SPA mode
INSVEX_BUILDCONFIG_DIRECTORY_INDEX_NAME=
# try to load full images as thumbanils
# ONLY viable if running in SPA+NginX DirList mode
INSVEX_BUILDCONFIG_SPA_FULL_IMAGE_THUMBS=false